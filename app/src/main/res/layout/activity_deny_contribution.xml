<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".DenyContributionActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:gravity="center">


            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message"
                android:inputType="textMultiLine"
                android:textColorHint="#8E8B8B"
                android:textColor="@color/black"
                android:padding="8dp"
                android:minHeight="48dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/bck_edit_text"
                android:maxLines="5"
                android:lineSpacingExtra="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/SendButt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Email"
                android:layout_marginVertical="16dp"
                android:background="@drawable/bck_butt_accept"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ConfirmButt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Deny"
                android:layout_marginVertical="16dp"
                android:background="@drawable/bck_deny"/>

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/ProgressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>





</androidx.appcompat.widget.LinearLayoutCompat>